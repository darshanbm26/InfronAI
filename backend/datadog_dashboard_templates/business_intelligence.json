      "definition": {
        "type": "timeseries",
        "title": "AI Recommendation Acceptance Rate",
        "requests": [{
          "q": "avg:ai.recommendation.acceptance_rate{*}",
          "display_type": "line"
        }]
      },
      "layout": {"x": 0, "y": 0, "width": 8, "height": 4}
    },
    {
      "definition": {
        "type": "query_value",
        "title": "Total Cost Saved Today",
        "requests": [{
          "q": "sum:cost.savings.realized{*}.rollup(sum, 86400)",
          "aggregator": "sum"
        }]
      },
      "layout": {"x": 8, "y": 0, "width": 4, "height": 4}
    }
  ]
}